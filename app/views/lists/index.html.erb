<div class="banner" style="background-image: url('https://images.unsplash.com/photo-1489599849927-2ee91cede3ba?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1740&q=80')">
  <h1>Save any kind of movie</h1>
  <p>Classic</p>
</div>

<div class="container pt-3">
  <div class="row">
    <div class="col-8">
      <div>My Lists</div>
      <% @lists.each do |list| %>
      <div class="row">
      </div>
        <div class="list-card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 300, width: 400, crop: :fill %>')">
          <%= link_to list.name, list_path(list) %>
        </div>
      <% end %>
    </div>
    <div class="col-4">
      <div class="btn btn-success">
        <%= link_to "Create movie list", new_list_path %>
      </div>
    </div>
  </div>
</div>
