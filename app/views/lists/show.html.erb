<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @list.photo.key, height: 300, width: 400, crop: :fill %>')">
  <h2>@list.name</h2>
</div>

<%= link_to "Edit", edit_list_path(@list) %>
<div class="container">
  <div class="row">
    <div class="col-8">
      <div>My Lists</div>
      <%= @list.movies.each do |movie| %>
      <div class="list-card" style="background-image:;">
        <%= cl_image_tag @list.photo.key, height: 300, width: 400, crop: :fill %>
        <%= movie.title%>
        <%= movie.overview%>
      </div>
      <% end %>
    </div>
  </div>
</div>
